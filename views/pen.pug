extends layout 

block content 
    h1= title
    - let items = results;
    div(class="container-fluid")
        - let des1 = `dispatch(\"/pen/create")`
        button.btn( class="btn-warning ml-1", onclick= des1) create
        div(class ="row m-1")
            each item in items
                - let des2 = `dispatch(\"/pen/delete?id=${item._id}\")`
                - let des3 = `dispatch(\"/pen/detail?id=${item._id}\")`
                - let destination = `dispatch(\"/pen/update?id=${item._id}\")`
                div.col-sm-2(onclick=`buy(${index})`) #{item["pen_ink"]}, #{item["pen_brand"]}, #{item["pen_cost"]}
                    br
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
                    br
                    button.btn( class="btn-danger ml-1", onclick= des2) Delete
                    br
                    button.btn( class="btn-success ml-1", onclick= des3) Details

    script. 
        function dispatch(path) {
            window.location.href=path
        }

    
